<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/norwester</item>
    </style>

    <style name="loadingScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/loading_screen</item>
        <item name="android:statusBarColor">@color/md_white_1000</item>
    </style>

    <style name="TxtvuTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/latobold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="ChatTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/latoregular</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>





    <style name="style_btn" parent="ThemeOverlay.AppCompat">
        <item name="colorButtonNormal">@drawable/btn_color</item>
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:fontFamily">@font/norwester</item>

    </style>

    <style name="style_imgbtn_meal" parent="ThemeOverlay.AppCompat">
